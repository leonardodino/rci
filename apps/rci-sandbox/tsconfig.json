{
  "include": ["src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "lib": ["dom", "es2020"],
    "rootDir": ".",
    "outDir": "./dist",
    "tsBuildInfoFile": ".cache/.tsbuildinfo",
    "incremental": true,
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveWatchOutput": true
  }
}
